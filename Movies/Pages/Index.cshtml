@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Movies</h1>
<div id="container">
    <div id="results">
        <form method="post">
            <input type="text" name="search" id="search" />
            <input type="submit" value="Search" />

            <h2>MPAA Rating</h2>
            <label>
                <input type="checkbox" name="rating" value="PG" />
                Rated PG
            </label>
            <label>
                <input type="checkbox" name="rating" value="PG-13" />
                Rated PG-13
            </label>
            <label>
                <input type="checkbox" name="rating" value="R" />
                Rated R
            </label>
            <label>
                <input type="checkbox" name="rating" value="NC-17" />
                Rated NC-17
            </label>
        </form>
    </div>
</div>
    @foreach (Movie movie in Model.MovieDatabase.All)
    {
        <div class="movie-entry">
            <h4>
                @movie.Title
                <smaller>@(@movie.MPAA_Rating == null ? "Not Available" : $"({@movie.MPAA_Rating})")</smaller>
            </h4>
            <i>@movie.Major_Genre</i>
            <div class="ratings">
                <div>
                    Rotten Tomatoes
                    <h3>@movie.Rotten_Tomatoes_Rating</h3>
                </div>
                <div>
                    IMDB
                    <h3>@movie.IMDB_Rating</h3>

                </div>
            </div>
        </div>

}

